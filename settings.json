{
	// cspell:disable
	//*--------------------APPEARANCE--------------------*//

	//!Editor Settings
	"editor.fontSize": 14,
	"editor.fontFamily": "JetbrainsMono Nerd Font Mono",
	//"editor.fontFamily": "ComicShannsMono Nerd Font",
	//"editor.fontFamily": "Monaspace Radon",
	//"editor.fontFamily": "Iosevka Nerd Font",

	"editor.fontVariations": true,
	"editor.inlineSuggest.fontFamily": "Monaspace Krypton",
	"editor.fontLigatures": true,
	//"editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09', 'liga'", //for Monaspace
	"editor.wordWrapColumn": 90,
	"editor.rulers": [90],
	"editor.smoothScrolling": false,
	"editor.minimap.autohide": true,
	"editor.minimap.renderCharacters": false,
	"editor.guides.bracketPairs": "active",
	"editor.guides.bracketPairsHorizontal": true,
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.multiCursorModifier": "alt",
	"editor.accessibilitySupport": "off",
	"editor.inlineSuggest.suppressSuggestions": true,
	"editor.tokenColorCustomizations": { //to disable italics
		"textMateRules": [
			{
				"scope": [
					"comment",
					"comment.block",
					"comment.block.documentation",
					"comment.line",
					"constant",
					"constant.character",
					"constant.character.escape",
					"constant.numeric",
					"constant.numeric.integer",
					"constant.numeric.float",
					"constant.numeric.hex",
					"constant.numeric.octal",
					"constant.other",
					"constant.regexp",
					"constant.rgb-value",
					"emphasis",
					"entity",
					"entity.name",
					"entity.name.class",
					"entity.name.function",
					"entity.name.method",
					"entity.name.section",
					"entity.name.selector",
					"entity.name.tag",
					"entity.name.type",
					"entity.other",
					"entity.other.attribute-name",
					"entity.other.inherited-class",
					"invalid",
					"invalid.deprecated",
					"invalid.illegal",
					"keyword",
					"keyword.control",
					"keyword.operator",
					"keyword.operator.new",
					"keyword.operator.assignment",
					"keyword.operator.arithmetic",
					"keyword.operator.logical",
					"keyword.other",
					"markup",
					"markup.bold",
					"markup.changed",
					"markup.deleted",
					"markup.heading",
					"markup.inline.raw",
					"markup.inserted",
					"markup.italic",
					"markup.list",
					"markup.list.numbered",
					"markup.list.unnumbered",
					"markup.other",
					"markup.quote",
					"markup.raw",
					"markup.underline",
					"markup.underline.link",
					"meta",
					"meta.block",
					"meta.cast",
					"meta.class",
					"meta.function",
					"meta.function-call",
					"meta.preprocessor",
					"meta.return-type",
					"meta.selector",
					"meta.tag",
					"meta.type.annotation",
					"meta.type",
					"punctuation.definition.string.begin",
					"punctuation.definition.string.end",
					"punctuation.separator",
					"punctuation.separator.continuation",
					"punctuation.terminator",
					"storage",
					"storage.modifier",
					"storage.type",
					"string",
					"string.interpolated",
					"string.other",
					"string.quoted",
					"string.quoted.double",
					"string.quoted.other",
					"string.quoted.single",
					"string.quoted.triple",
					"string.regexp",
					"string.unquoted",
					"strong",
					"support",
					"support.class",
					"support.constant",
					"support.function",
					"support.other",
					"support.type",
					"support.type.property-name",
					"support.variable",
					"variable",
					"variable.language",
					"variable.name",
					"variable.other",
					"variable.other.readwrite",
					"variable.parameter"
				],
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},

	//!Workbench Appearance
	"workbench.colorTheme": "Catppuccin Mocha",
	"workbench.iconTheme": "catppuccin-mocha",
	"workbench.productIconTheme": "material-product-icons",
	"workbench.layoutControl.enabled": false, //to hide the top bar
	"window.commandCenter": false, //to hide the other top bar
	"workbench.tree.renderIndentGuides": "always",
	"workbench.tree.enableStickyScroll": true,
	"window.titleBarStyle": "custom",
	"workbench.editor.openPositioning": "last", //open new tabs at the very end
	"workbench.colorCustomizations": {
		"terminal.background": "#00000000"
	},

	//!Terminal Settings
	"terminal.integrated.fontFamily": "Monaspace Krypton",
	"terminal.integrated.fontWeight": "bold",
	"terminal.integrated.fontSize": 11,
	"terminal.external.osxExec": "Warp.app",
	"terminal.integrated.shell.osx": "zsh",

	//!Dictionary
	"cSpell.userWords": ["EECS"],

	//!Sync between profiles
	"workbench.settings.applyToAllProfiles": ["workbench.colorCustomizations", "workbench.colorTheme", "workbench.iconTheme", "workbench.productIconTheme", "editor.fontFamily", "editor.fontSize", "editor.fontLigatures", "editor.cursorSmoothCaretAnimation", "window.titleBarStyle", "editor.rulers", "editor.wordWrapColumn", "editor.minimap.autohide", "editor.minimap.renderCharacters", "workbench.tree.renderIndentGuides", "workbench.tree.enableStickyScroll"],

	//*--------------------EXTENSIONS--------------------*//

	//!General Formatting
	"editor.defaultFormatter": "esbenp.prettier-vscode", //"esbenp.prettier-vscode",
	"editor.formatOnPaste": true,
	"prettier.useTabs": true,
	"editor.tabSize": 4,
	"prettier.experimentalTernaries": true,
	"prettier.printWidth": 1000, //so that code doesn't wrap arround annoyingly
	"extensions.experimental.affinity": {
		"asvetliakov.vscode-neovim": 1
	},
	"better-comments.highlightPlainText": true,

	//!Error Lens
	"errorLens.codeLensTemplate": "$severity $message$source",
	"errorLens.enabledDiagnosticLevels": ["error" /*"warning", "hint", "info"*/],
	"codeium.enableCodeLens": "hide_x", // Hides the CodeLens for Codeium extension.

	//!GitLens
	"gitlens.currentLine.fontSize": 10,
	"gitlens.currentLine.fontFamily": "Monaspace Krypton",
	"gitlens.plusFeatures.enabled": false,
	"gitlens.hovers.enabled": false,
	"gitlens.codeLens.enabled": false,

	//!Indent-coloring
	"indentRainbow.lightIndicatorStyleLineWidth": 6,
	"indentRainbow.indicatorStyle": "light",
	"indentRainbow.colors": ["rgba(255,255,64,0.07)", "rgba(127,255,127,0.07)", "rgba(255,127,255,0.07)", "rgba(79,236,236,0.07)"],

	"better-comments.tags": [
		{
			"tag": "//",
			"color": "#474747", //grey
			"strikethrough": true,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "todo",
			"color": "#474747",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "#ff8C00", //yellow highlight
			"bold": false,
			"italic": false
		},
		{
			"tag": "!",
			"color": "#ff2d00", //red
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": false
		},
		{
			"tag": "?",
			"color": "#FF69B4", //pink
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "*",
			"color": "#00ffd2", //cyan
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "#",
			"color": "#00FFFF", //blue
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		}
	],

	//!Extra Theme Settings
	"vscode_vibrancy.opacity": 1,

	//*--------------------FUNCTIONALITY--------------------*//

	//!File Handling
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 100,
	"files.autoSaveWhenNoErrors": true,
	"explorer.confirmDelete": false,
	"projectManager.git.baseFolders": ["/Users/sarraf/Coding"],
	"projectManager.groupList": true,
	"projectManager.showParentFolderInfoOnDuplicates": true,

	//!C/C++ Settings
	"C_Cpp.intelliSenseEngine": "disabled", //disable intellisense for c++ and use clang
	"C_Cpp.default.cppStandard": "c++17",
	"cmake.configureOnOpen": true,
	"makefile.configureOnOpen": true,
	//?C++ Code Formatting
	"[cpp]": {
		"editor.defaultFormatter": "xaver.clang-format",
		"editor.formatOnPaste": true,
		//"editor.formatOnSave": true,
		"editor.autoIndent": "full",
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"C_Cpp.formatting": "clangFormat",
	"clang-format.fallbackStyle": "LLVM",
	"C_Cpp.codeAnalysis.clangTidy.checks.disabled": ["readability-magic-numbers", "cppcoreguidelines-avoid-magic-numbers"],

	//!General
	"breadcrumbs.enabled": false, //easier navigation
	"security.workspace.trust.untrustedFiles": "open",
	"arduino.path": "/Applications",
}